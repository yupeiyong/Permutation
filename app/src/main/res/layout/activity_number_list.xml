<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NumberListActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp">
        <TextView
            android:id="@+id/txt_number_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/red"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"/>
        <Button
            android:id="@+id/btn_export"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_selector"
            android:minWidth="80dp"
            android:minHeight="32dp"
            android:padding="2dp"
            android:textSize="14dp"
            android:text="导出Pdf"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            android:text="奇数数量："/>
        <EditText
            android:id="@+id/et_odd_Count"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            style="@style/textbox_title_style"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textSize="16dp"
            android:inputType="number"
            android:layout_toRightOf="@+id/tv_title"
            android:layout_centerVertical="true"
            android:background="@drawable/textbox_selector"
            android:lines="1"/>
        <Button
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="80dp"
            android:minHeight="32dp"
            android:padding="2dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_selector"
            android:textSize="14dp"
            android:text="筛选"/>
    </RelativeLayout>
    <View
        style="@style/list_item_seperator_layout"/>
    <include
        layout="@layout/list_header"/>
    <View
        style="@style/list_item_seperator_layout"/>
    <ListView
        android:id="@+id/lv_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
</LinearLayout>