<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="BaseTitleBar">
        <attr name="setLeftImageVisibility">
            <enum name="visible" value="0" />
            <enum name="invisible" value="4" />
            <enum name="gone" value="8" />
        </attr>
        <attr name="setLeftTextVisibility">
            <enum name="visible" value="0" />
            <enum name="invisible" value="4" />
            <enum name="gone" value="8" />
        </attr>
        <attr name="setRightImageVisibility">
            <enum name="visible" value="0" />
            <enum name="invisible" value="4" />
            <enum name="gone" value="8" />
        </attr>
        <attr name="setRightTextVisibility">
            <enum name="visible" value="0" />
            <enum name="invisible" value="4" />
            <enum name="gone" value="8" />
        </attr>
        <attr name="setTitleVisibility">
            <enum name="visible" value="0" />
            <enum name="invisible" value="4" />
            <enum name="gone" value="8" />
        </attr>
        <attr name="setLineVisibility">
            <enum name="visible" value="0" />
            <enum name="invisible" value="4" />
            <enum name="gone" value="8" />
        </attr>
        <attr name="setLeftImage" format="reference" />
        <attr name="setRightImage" format="reference" />
        <attr name="setLeftText" format="reference|string" />
        <attr name="setRightText" format="reference|string" />
        <attr name="setTitle" format="reference|string" />
        <attr name="setBackground" format="color" />
        <attr name="setTitleColor" format="color" />
        <attr name="setRightTextColor" format="color" />
        <attr name="isQuiet" format="boolean" />
    </declare-styleable>

    <!-- Declare custom theme attributes that allow changing which styles are
         used for button bars depending on the API level.
         ?android:attr/buttonBarStyle is new as of API 11 so this is
         necessary to support previous API levels. -->
    <declare-styleable name="ButtonBarContainerTheme">
        <attr name="metaButtonBarStyle" format="reference" />
        <attr name="metaButtonBarButtonStyle" format="reference" />
    </declare-styleable>

</resources>